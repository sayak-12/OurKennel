<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Adoption Registration</title>
</head>
<body>
    <form action="/pet-registration" method="post" enctype="multipart/form-data">
        <div class="pet-photo">
            <label for="photo">Upload Pet Photo</label><br>
            <input type="file" accept="image/*" name="photo" id="photo" required>
            <br>
            <img id="photo-preview" src="" alt="Pet Photo" style="max-width: 200px; display: none;">
        </div>
        <div class="name">
            <label for="name">Pet Name (if any)</label><br>
            <input type="text" placeholder="Enter pet name" name="name">
        </div>
        <div class="species">
            <label for="species">Species</label><br>
            <input type="text" placeholder="eg. Dog, cat, pigeon" name="species" required>
        </div>
        <div class="age">
            <label for="age">Age (in months)</label><br>
            <input type="number" placeholder="eg. 24 months" name="age">
        </div>
        <div class="contact">
            <label for="contactName">Contact Person Name</label><br>
            <input type="text" placeholder="Enter contact person's name" name="contactName" required>
            <br>
            <label for="contactNumber">Contact Phone Number</label><br>
            <input type="tel" placeholder="Enter phone number" name="contactNumber" required>
        </div>
        <div class="description">
            <label for="description">Short Description (Optional)</label><br>
            <textarea placeholder="Enter a short description" name="description"></textarea>
        </div>
        <button type="submit">Register</button>
    </form>

    <script>
        // Preview the selected pet photo
        const photoInput = document.getElementById('photo');
        const photoPreview = document.getElementById('photo-preview');

        photoInput.addEventListener('change', function () {
            const file = this.files[0];

            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    photoPreview.src = e.target.result;
                    photoPreview.style.display = 'block';
                };

                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
